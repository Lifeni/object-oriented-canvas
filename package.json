{
  "name": "object-oriented-canvas",
  "version": "0.0.2",
  "description": "一个基于面向对象分析与设计的画布 App",
  "scripts": {
    "build": "tsc",
    "build:win": "tsc && electron-builder --win portable",
    "build:linux": "tsc && electron-builder --linux",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "electronmon ./dist/main.js",
    "watch": "tsc -w",
    "dev": "concurrently npm:watch npm:start",
    "clear": "rimraf ./dist",
    "prebuild": "npm run clear"
  },
  "repository": "https://github.com/Lifeni/object-oriented-canvas",
  "author": "Lifeni",
  "license": "MIT",
  "devDependencies": {
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "electron": "^12.0.9",
    "electron-builder": "^22.10.5",
    "eslint": "^7.27.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "mitt": "^2.1.0",
    "rxjs": "^7.1.0",
    "uuid": "^8.3.2"
  },
  "main": "dist/main.js",
  "build": {
    "appId": "app.lifeni.canvas",
    "productName": "Object-oriented Canvas",
    "files": [
      "assets/",
      "dist/",
      "index.html",
      "package.json"
    ],
    "directories": {
      "app": ".",
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
